<%- include("partial/header") -%>

<%- include("partial/navbar") -%>
<body>
  
  <!-- Carousel -->
  <section style="margin-top: 2rem;" id="carousel">
    <div id="carouselExampleCaptions" class="carousel slide">
      <div class="carousel-indicators">
        <button type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide-to="0" class="active"
          aria-current="true" aria-label="Slide 1"></button>
        <button type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide-to="1"
          aria-label="Slide 2"></button>
        <button type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide-to="2"
          aria-label="Slide 3"></button>
      </div>
      <div class="carousel-inner">
        <div class="carousel-item active">
          <img
            src="<%= carousel1.img_url %>"
            class="carousel-img" alt="...">
          <div class="carousel-caption">
            <a class="carouselLink" href="/get-arcticles/<%= carousel1._id %>"><h5 style="font-weight: 800;" class="carouselH"><%= carousel1.carouselHeading %></h5></a>
            <p class="carouselP"><%= carousel1.content.substr(0 , 150) %>...</p>
          </div>
        </div>
        <div class="carousel-item">
          <img
            src="<%= carousel2.img_url %>"
            class="carousel-img" alt="...">
          <div class="carousel-caption">
            <a class="carouselLink" href="/get-arcticles/<%= carousel2._id %>"><h5 style="font-weight: 800;" class="carouselH"><%= carousel2.carouselHeading %></h5></a>
            <p class="carouselP"><%= carousel2.content.substr(0 , 150) %>...</p>
          </div>
        </div>
        <div class="carousel-item">
          <img
            src="<%= carousel3.img_url %>"
            class="carousel-img" alt="...">
          <div class="carousel-caption">
            <a class="carouselLink" href="/get-arcticles/<%= carousel3._id %>"><h5 style="font-weight: 800;" class="carouselH"><%= carousel3.carouselHeading %></h5></a>
            <p class="carouselP"><%= carousel3.content.substr(0 , 150) %>...</p>
          </div>
        </div>
      </div>
      <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Previous</span>
      </button>
      <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Next</span>
      </button>
    </div>
  
  </section>

  
  <!-- Cards -->
<section id="cards">
  <h4 style="margin-bottom: 2rem; margin-top: 4rem;">Also Explore</h4>
  
  <div class="row justify-content-center">
    <% foundPost.forEach((post) => { %>
      <% if(post._id != carousel1._id && post._id != carousel2._id && post._id != carousel3._id){ %>
        <div style="margin-bottom: 20px; margin-left: 5px;" class="col-md">
          <div class="card shadow h-100 mx-auto" style="width: 20rem;">
            <div class="p-1">
              <img alt="..." src="<%= post.img_url %>" class="card-img">
            </div>
            <!-- Card Body -->
            <div class="card-body">
              <!-- Title -->
              <h3 class="h4"><%= post.title %></h3>
              <!-- Subtitle -->
              <% const day = (post.createdAt).getDate(); %>
              <% const month = (post.createdAt).toLocaleString('default', { month: 'short' }); %>
              <% const year = (post.createdAt).getFullYear(); %>
              <span class="card-date d-block text-muted text-sm font-semibold">Published at <%= day %> <%= month %> <%= year %></span>
              <a style="margin-top: 1rem;" href="/get-arcticles/<%= post._id %>" class="btn btn-sm btn-dark">
                Read more
              </a>
            </div>
          </div>
        </div>
      <% } %>
    <% }) %>
   
  </div>
</div>
</section>
  
  <%- include("partial/footer") -%>