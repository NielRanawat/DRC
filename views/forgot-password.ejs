<%- include("partial/header") -%>


<main class="w-full max-w-md mx-auto p-6">
      <!-- password reseted Modal popup -->

      <div id="passPopup" style="display: none;" class="relative z-10" aria-labelledby="modal-title" role="dialog" aria-modal="true">
        <div class="fixed inset-0 bg-gray-500 bg-opacity-75 transition-opacity"></div>
      
        <div class="fixed inset-0 z-10 w-screen overflow-y-auto">
          <div class="flex min-h-full items-end justify-center p-4 text-center sm:items-center sm:p-0">
            <div class="relative transform overflow-hidden rounded-lg bg-white text-left shadow-xl transition-all sm:my-8 sm:w-full sm:max-w-lg">
              <div class="bg-white px-4 pb-4 pt-5 sm:p-6 sm:pb-4">
                <div class="sm:flex sm:items-start">
                  <div class="mx-auto flex h-12 w-12 flex-shrink-0 items-center justify-center rounded-full bg-green-100 sm:mx-0 sm:h-10 sm:w-10">
                    <svg class="w-4 text-green-400 h-4" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="rgba(100,205,138,1)"><path d="M12 22C6.47715 22 2 17.5228 2 12C2 6.47715 6.47715 2 12 2C17.5228 2 22 6.47715 22 12C22 17.5228 17.5228 22 12 22ZM11.0026 16L18.0737 8.92893L16.6595 7.51472L11.0026 13.1716L8.17421 10.3431L6.75999 11.7574L11.0026 16Z"></path></svg>

                  </div>
                  <div class="mt-3 text-center sm:ml-4 sm:mt-0 sm:text-left">
                    <h3 class="text-xl mb-2 font-semibold leading-6 text-gray-900" id="modal-title">Password changed!</h3>
                    <div class="mt-2">
                      <p class="text-base text-gray-500">The password for your DRC account has been changed. <br> Please login to continue</p>
                    </div>
                  </div>
                </div>
              </div>
              <div class="bg-gray-50 px-4 py-3 sm:flex sm:flex-row-reverse sm:px-6">
                <button type="button" class="inline-flex w-full justify-center rounded-md bg-blue-600 px-3 py-2 text-sm text-white shadow-sm hover:bg-blue-500 sm:ml-3 sm:w-auto"><a href="/login">
                  Login
                </a></button>
                <button onclick="closePopup(this)" type="button" class="mt-3 inline-flex w-full justify-center rounded-md bg-white px-3 py-2 text-sm  text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 hover:bg-gray-50 sm:mt-0 sm:w-auto">Close</button>
              </div>
            </div>
          </div>
        </div>
      </div>

      <!-- end password resetted  modal popup -->



      <!-- Email sent Modal popup -->


      <div id="emailPopup" style="display: none;" class="relative z-10" aria-labelledby="modal-title" role="dialog" aria-modal="true">
        <div class="fixed inset-0 bg-gray-500 bg-opacity-75 transition-opacity"></div>
      
        <div class="fixed inset-0 z-10 w-screen overflow-y-auto">
          <div class="flex min-h-full items-end justify-center p-4 text-center sm:items-center sm:p-0">
            <div class="relative transform overflow-hidden rounded-lg bg-white text-left shadow-xl transition-all sm:my-8 sm:w-full sm:max-w-lg">
              <div class="bg-white px-4 pb-4 pt-5 sm:p-6 sm:pb-4">
                <div class="sm:flex sm:items-start">
                  <div class="mx-auto flex h-12 w-12 flex-shrink-0 items-center justify-center rounded-full bg-green-100 sm:mx-0 sm:h-10 sm:w-10">
                    <svg class="w-4 text-green-400 h-4" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="rgba(100,205,138,1)"><path d="M21 3C21.5523 3 22 3.44772 22 4V20.0066C22 20.5552 21.5447 21 21.0082 21H2.9918C2.44405 21 2 20.5551 2 20.0066V19H20V7.3L12 14.5L2 5.5V4C2 3.44772 2.44772 3 3 3H21ZM8 15V17H0V15H8ZM5 10V12H0V10H5ZM19.5659 5H4.43414L12 11.8093L19.5659 5Z"></path></svg>

                  </div>
                  <div class="mt-3 text-center sm:ml-4 sm:mt-0 sm:text-left">
                    <h3 class="text-xl mb-2 font-semibold leading-6 text-gray-900" id="modal-title">Check your inbox!</h3>
                    <div class="mt-2">
                      <p class="text-base text-gray-500">We've sent instructions to reset your password to <span id="emailGot" class="font-bold"></span>, please check both your inbox and spam folder.</p>
                    </div>
                  </div>
                </div>
              </div>
              <div class="bg-gray-50 px-4 py-3 sm:flex sm:flex-row-reverse sm:px-6">
                <button type="button" class="inline-flex w-full justify-center rounded-md bg-blue-600 px-3 py-2 text-sm text-white shadow-sm hover:bg-blue-500 sm:ml-3 sm:w-auto"><a href="https://mail.google.com">
                  Open Gmail
                </a></button>
                <button onclick="closePopup()" type="button" class="mt-3 inline-flex w-full justify-center rounded-md bg-white px-3 py-2 text-sm  text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 hover:bg-gray-50 sm:mt-0 sm:w-auto">Close</button>
              </div>
            </div>
          </div>
        </div>
      </div>

      
      <!-- End email sent modal popup -->

    <div class="mt-24 bg-white border border-gray-200 rounded-xl shadow-sm null:bg-gray-800 null:border-gray-700">
        <div class="content-center mt-4 text-center">
            <a href="/">
                <img class="mx-auto h-[3.875rem] w-[3.875rem] rounded-full"
                src="https://pbs.twimg.com/profile_images/1650559623961927681/GIuz2m6K_400x400.jpg" alt="logo">
            </a>
            <h1 class="text-2xl font-bold mt-3">DesiRacingCo</h1>
        </div>
      <div class="px-6 py-5">
        <div class="text-center">
          <h1 class="block text-2xl mb-3 text-gray-800 null:text-white">Reset Password</h1>
          <p class="mt- text-center text-sm text-gray-600 null:text-gray-400">
            Enter the email linked to your account and we'll send you instructions to reset your password.
          </p>
        </div>

        <div class="mt-5">
          <!-- Form -->
          <form action="/forgot-password" method="POST">
            <div class="grid gap-y-4">
              <!-- Form Group -->
              <div class="mb-5">
                  <input placeholder="Email Address" type="email" id="email" name="email" class="py-3 px-4 block w-full border border-gray-300 rounded-lg text-sm focus:border-blue-500 focus:ring-blue-500 disabled:opacity-50 disabled:pointer-events-none null:bg-slate-900 null:border-gray-700 null:text-gray-400 null:focus:ring-gray-600" required aria-describedby="email-error">
                  <div class="hidden absolute inset-y-0 end-0 pointer-events-none pe-3">
                    <svg class="size-5 text-red-500" width="16" height="16" fill="currentColor" viewBox="0 0 16 16" aria-hidden="true">
                      <path d="M16 8A8 8 0 1 1 0 8a8 8 0 0 1 16 0zM8 4a.905.905 0 0 0-.9.995l.35 3.507a.552.552 0 0 0 1.1 0l.35-3.507A.905.905 0 0 0 8 4zm.002 6a1 1 0 1 0 0 2 1 1 0 0 0 0-2z"/>
                    </svg>
                  </div>
                </div>
                <p class="hidden text-xs text-red-600 mt-2" id="email-error">Please include a valid email address so we can get back to you</p>
              </div>
              <!-- End Form Group -->

              <button type="submit" class="w-full py-3 px-4 inline-flex justify-center items-center gap-x-2 text-sm font-semibold rounded-lg border border-transparent bg-black text-white hover:bg-grey-900 disabled:opacity-50 disabled:pointer-events-none null:focus:outline-none null:focus:ring-1 null:focus:ring-gray-600">Reset password</button>
            </div>
          </form>
          <p class="mt-6 text-center text-sm text-gray-600 null:text-gray-400">
            Remember your password?
            <a class="text-blue-600 decoration-2 hover:underline font-medium null:focus:outline-none null:focus:ring-1 null:focus:ring-gray-600" href="/login">
              Sign in here
            </a>
          </p>
          <!-- End Form -->
        </div>
      </div>
    </div>
  </main>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/flowbite/2.3.0/flowbite.min.js"></script>

  <script>
    function closePopup(){
      document.getElementById('emailPopup').style.display = 'none';
      document.getElementById('passPopup').style.display = 'none';

    }
  </script>
  <script>
    document.addEventListener('DOMContentLoaded', function () {
      const urlParams = new URLSearchParams(window.location.search);

if (urlParams.has('returnMsg') && urlParams.get('returnMsg') === 'emailSent') {

    // Get the email parameter from the URL
    var emailParam = urlParams.get('email');

    // Set the value of the email in the 'email' <p> tag
    if (emailParam) {
        document.getElementById('emailGot').innerHTML = emailParam;
        // show modal
        document.getElementById('emailPopup').style.display= 'block';
        
    }

    // Hide the alert after 30 seconds with a smooth animation
    setTimeout(function () {
        document.getElementById('success-alert').style.display = 'none';
    }, 30000);

}


      if (urlParams.has('returnMsg') && urlParams.get('returnMsg') === 'passwordResetted') {
        // Show the alert div
        document.getElementById('passPopup').style.display= 'block';
        setTimeout(function () {
          document.getElementById('pass-alert').style.display = 'none';
        }, 30000);
      }

          
    });

  </script>

